<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>FoodFinder</title>
    <style>
        .card {
            height: 100%;
            display: flex;
            flex-direction: column;
            border: 3px solid #3d6e76;
            border-radius: 8px;
        }

        .card-body {
            flex: 1;
            padding: 20px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        h2 {
            padding: 20px;
        }

        .card-title {
            text-align: center;
            padding: 10px;
            margin-bottom: 15px;
            color: darkgreen;
        }

        .button {
            padding: 5px;
            text-align: center;
        }

        .card-text img {
            display: block;
            margin: 0 auto;
            max-height: 100px;
            width: auto;
        }
        .home {
            text-align: center;
            padding: 30px 5px 0px 0px;
        }
        h1 {
            font-size: 50px;
            font-family: Verdana;
        }

        body {
            background-color: rgb(185, 216, 208);
        }
    </style>
</head>

<body>
    <%- include ('partials/navbar.ejs') %>

        <div class="home">
            <h1><b>FoodFinder</b></h1>
            <h6>Where every edibles are reviewed</h6>
        </div>

        <div class="container mt-3">
            <h2>All Reviews</h2>

            <div class="row row-cols-1 row-cols-md-4 g-4">
                <% for (let i=0; i < products.length; i++) { %>
                    <div class="col">
                        <div class="card">
                            <div class="card-body">
                                <p class="card-text"><img src="/images/<%= products[i].image %>"></p>
                                <h5 class="card-title">
                                    <%= products[i].name %></a>
                                </h5>
                                <p class="card-text">Brand: <%= products[i].brand %>
                                </p>
                                <p class="card-text">Price: $<%= products[i].price.toFixed(2) %>
                                </p>
                                <p class="card-text">Rating: <%= products[i].rating %>/5 stars
                                </p>
                                <p class="card-text">Category: <%= products[i].category %>
                                </p>
                                <div class="button">
                                    <a href="/productInfo/<%= products[i].productId %>" class="btn btn-primary">More Info</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% } %>
            </div>

        </div>
</body>

</html>